section.products
  if wares
    if wares.success == true
      a(href='https://valaxin.gumroad.com/').subtext
        span  GUMROAD 
        span.icon.is-small.plug-icon
          i.fa-solid.fa-bolt
      h1.title
        a(href='/shop.html')
          span shop
     
      div.container
        each product, index in wares.products
          div.item
            a(href= product.short_url)
              img(src= product.preview_url)
              h2= product.name
              h3= product.custom_summary
              .tags
                .tag.is-price.is-outline
                  span= product.formatted_price

                if product.published === false
                  .tag.is-warning
                    span Not Published!
                else 
                  if product.max_purchase_count !== null
                    .tag.is-warning
                      span= product.max_purchase_count + ' Available'

                    